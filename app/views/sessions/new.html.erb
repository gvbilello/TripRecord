<% provide(:title, 'Sign In') %>
<h1>Sign In</h1>

<%= form_for :session, url: signin_path do |f| %>
  <%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>

	<p>
		<%= f.label :email %>
		<%= f.text_field :email %>
	</p>

	<p>
		<%= f.label :password %>
		<%= f.password_field :password %>
	</p>

	<p>
		<%= f.submit "Sign In" %>
	</p>

<% end %>