<!-- new trip form -->
<% provide(:title, 'Create New Trip') %>
<h1>Create New Trip</h1>

<%= form_for :trip, url: { action: 'create' } do |f| %>
	<%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>

	<%= f.hidden_field :user_id, :value => session[:user_id] %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.label :start_date %>
		<%= date_select :trip, :start_date %>
	</p>

	<p>
		<%= f.label :end_date %>
		<%= date_select :trip, :end_date %>
	</p>

	<p>
		<%= f.submit "Create Trip" %>
	</p>
<% end %>