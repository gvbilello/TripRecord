<!-- new event form -->
<% provide(:title, 'Create New Event') %>
<h1>Create New Event</h1>

<%= form_for :event, url: { action: 'create' } do |f| %>
	<%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>

	<%= f.hidden_field :trip_id, :value => @event.trip_id %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :location %>
		<%= f.text_field :location %>
	</p>

	<p>
		<%= f.label :type_of %>
		<%= f.text_field :type_of %>
	</p>

	<p>
		<%= f.label :description %>
		<%= f.text_field :description %>
	</p>

	<p>
		<%= f.label :time %>
		<%= time_select :event, :time %>
	</p>

	<p>
		<%= f.label :date %>
		<%= date_select :event, :date %>
	</p>

	<p>
		<%= f.label :cost %>
		<%= f.text_field :cost %>
	</p>

	<p>
		<%= f.submit "Create Event" %>
	</p>

<% end %>