<!-- new flight form -->
<% provide(:title, 'Add New Flight') %>
<h1>Add New Flight</h1>

<%= form_for :flight, url: { action: 'create' } do |f| %>
	<%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>

	<%= f.hidden_field :trip_id, :value => @flight.trip_id %>

	<p>
		<%= f.label :takeoff_datetime %>
		<%= date_select :flight, :takeoff_datetime %>
	</p>

	<p>
		<%= f.label :landing_datetime %>
		<%= date_select :flight, :landing_datetime %>
	</p>

	<p>
		<%= f.label :airline %>
		<%= f.text_field :airline %>
	</p>

	<p>
		<%= f.label :flight_number %>
		<%= f.text_field :flight_number %>
	</p>

	<p>
		<%= f.label :takeoff_airport %>
		<%= f.text_field :takeoff_airport %>
	</p>

	<p>
		<%= f.label :landing_airport %>
		<%= f.text_field :landing_airport %>
	</p>

	<p>
		<%= f.label :cost %>
		<%= f.text_field :cost %>
	</p>

	<p>
		<%= f.submit "Add Flight" %>
	</p>

<% end %>